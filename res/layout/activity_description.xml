<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/we"
    tools:context="com.hack.plazooka.Description" >
    
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="It's time to leave all your electronic gadgets and go play.
            Sometimes we feel like playing but we have a tough time deciding what to play and whom to play with.
            Plazooka will help you figure out which game you can play and find friends to play with.The games shown here are some of the games which are on the verge of extinction.You can also share an old lost games."
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge" />
</ScrollView>
</RelativeLayout>
